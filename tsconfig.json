{
  "compilerOptions": {
      "strict": true,
      "module": "CommonJS",
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "lib",
      "sourceMap": true,
      "declaration": true,
      "target": "esnext",
      "lib": ["es2015", "es2016", "es2017"]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
